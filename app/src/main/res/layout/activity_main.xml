<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:background="@color/backgroundShade"
            android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:padding="12dp"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText"
            tools:context=".MainActivity">

        <ImageView
                android:src="@drawable/ic_playlist_add_check_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>

        <TextView
                android:text="Your Coins"
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:id="@+id/total"
                android:background="@drawable/gradient"
                android:layout_width="match_parent"
                android:layout_marginTop="24dp"
                android:layout_below="@id/heading"
                android:orientation="vertical"
                android:padding="56dp"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Total Value"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="$524.00"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
                android:id="@+id/sub_heading"
                android:text="List of Coins"
                android:padding="24dp"
                android:layout_below="@id/total"
                android:textColor="@android:color/black"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_below="@id/sub_heading"
                android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:contentPadding="18dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="6dp"
                    android:layout_height="wrap_content">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <ImageView
                                android:src="@drawable/ic_bitcoin"
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"/>

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_marginStart="12dp"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:text="Bitcoin"
                                    android:textColor="@android:color/black"
                                    android:layout_width="wrap_content"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:text="BTC"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:text="$9,856.66"
                                    android:layout_width="wrap_content"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:text="BTC"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:text="$120.82"
                                    android:textColor="@android:color/black"
                                    android:layout_width="wrap_content"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:text="17.58%"
                                    android:textColor="@color/colorAccent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>


                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginTop="24dp"
                    app:contentPadding="18dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="6dp"
                    android:layout_height="wrap_content">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <ImageView
                                android:src="@drawable/ic_ethereum"
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"/>

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_marginStart="12dp"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:text="Ethereum"
                                    android:textColor="@android:color/black"
                                    android:layout_width="wrap_content"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:text="ETC"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:text="$218.23"
                                    android:layout_width="wrap_content"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:text="ETC"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:text="$3.82"
                                    android:textColor="@android:color/black"
                                    android:layout_width="wrap_content"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:text="1.24%"
                                    android:textColor="#7E3BF2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>


                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:contentPadding="18dp"
                    android:layout_marginTop="24dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="6dp"
                    android:layout_height="wrap_content">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <ImageView
                                android:src="@drawable/ic_monero"
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"/>

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_marginStart="12dp"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:text="Monero"
                                    android:textColor="@android:color/black"
                                    android:layout_width="wrap_content"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:text="MTC"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:text="$81.19"
                                    android:layout_width="wrap_content"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:text="MTC"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:text="$20.22"
                                    android:textColor="@android:color/black"
                                    android:layout_width="wrap_content"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:text="13.59%"
                                    android:textColor="#FF6600"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>


                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:contentPadding="18dp"
                    android:layout_marginTop="24dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="6dp"
                    android:layout_height="wrap_content">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <ImageView
                                android:src="@drawable/ic_litecoin"
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"/>

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_marginStart="12dp"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:text="Litecoin"
                                    android:textColor="@android:color/black"
                                    android:layout_width="wrap_content"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:text="LTC"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:text="$92.63"
                                    android:layout_width="wrap_content"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:text="LTC"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:text="$350.15"
                                    android:textColor="@android:color/black"
                                    android:layout_width="wrap_content"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:text="57.02%"
                                    android:textColor="#BEBEBE"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>


                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>